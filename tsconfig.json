{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*test*",
    "src/**/*mock*",
    "src/**/*integration*"
  ],
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
