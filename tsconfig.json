{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*test*",
    "src/**/*mock*"
  ],
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
