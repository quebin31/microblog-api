{
  "name": "microblog-api",
  "version": "0.1.0",
  "description": "A microblog API",
  "main": "dist/src/index.js",
  "scripts": {
    "serve": "nodemon src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "npm run build && node dist/src/index.js",
    "redoc": "redocly preview-docs api/openapi.yaml",
    "migrate:development": "dotenv -e .env.development prisma migrate dev",
    "migrate:test": "dotenv -e .env.test prisma migrate deploy",
    "migrate:reset:development": "dotenv -e .env.development prisma migrate reset",
    "migrate:reset:test": "dotenv -e .env.test prisma migrate reset",
    "setup:development": "./scripts/setup-env.sh development && npm run migrate:development",
    "setup:test": "./scripts/setup-env.sh test && npm run migrate:test",
    "test:all": "npm run setup:test && jest --collect-coverage",
    "test:all:watch": "npm run setup:test && jest --watchAll",
    "test:unit": "jest --projects jest/jest.config.unit.ts --collect-coverage",
    "test:unit:watch": "jest --projects jest/jest.config.unit.ts --watchAll",
    "test:integration": "npm run setup:test && jest --projects jest/jest.config.integration.ts --collect-coverage",
    "test:integration:watch": "npm run setup:test && jest --projects jest/jest.config.integration.ts --watchAll"
  },
  "author": "Kevin Del Castillo",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@redocly/cli": "^1.0.0-beta.123",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/nanoid-dictionary": "^4.2.0",
    "@types/node": "^18.14.2",
    "@types/validator": "^13.7.12",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.4.3",
    "jest-mock-extended": "^3.0.3",
    "jest-watch-typeahead": "^2.2.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "prisma": "^4.11.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "@sendgrid/mail": "^7.7.0",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "eventemitter3": "^5.0.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.4",
    "nanoid-dictionary": "^4.3.0",
    "redis": "^4.6.5",
    "validator": "^13.9.0",
    "winston": "^3.8.2",
    "zod": "^3.20.6"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
